                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "name": "url",
        "type": "url",
        "title": "Project URL"
      },
      {
        "name": "image",
        "type": "image",
        "title": "Project image"
      }
    ],
    "name": "project",
    "type": "document"
  }
